{
  "firestore": {
    "database": "(default)",
    "location": "asia-southeast1",
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "functions": [
    {
      "source": "functions",
      "codebase": "default",
      "runtime": "nodejs22",
      "region": "asia-southeast1",
      "endpoints": {
        "pingHttp": {
          "httpsOptions": {
            "invoker": [
              "public"
            ]
          },
          "region": "us-central1"
        },
        "loginUniversalHttp": {
          "httpsOptions": {
            "invoker": [
              "public"
            ]
          },
          "region": "us-central1"
        },
        "sendOtpHttp": {
          "httpsOptions": {
            "invoker": [
              "public"
            ]
          },
          "region": "us-central1"
        },
        "verifyOtpHttp": {
          "httpsOptions": {
            "invoker": [
              "public"
            ]
          },
          "region": "us-central1"
        },
        "generateTestOtp": {
          "httpsOptions": {
            "invoker": [
              "public"
            ]
          },
          "region": "us-central1"
        },
        "updateUserRoles": {
          "httpsOptions": {
            "invoker": [
              "public"
            ]
          },
          "region": "us-central1"
        },
        "batchImportUsersHttp": {
          "httpsOptions": {
            "invoker": [
              "public"
            ]
          },
          "region": "us-central1"
        }
      },
      "ignore": [
        "node_modules",
        ".git",
        "firebase-debug.log",
        "firebase-debug.*.log",
        "*.local"
      ]
    }
  ],
  "hosting": {
    "public": "dist",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/api/sendOtpHttp",
        "function": "sendOtpHttp"
      },
      {
        "source": "/api/verifyOtpHttp",
        "function": "verifyOtpHttp"
      },
      {
        "source": "/api/loginUniversalHttp",
        "function": "loginUniversalHttp"
      },
      {
        "source": "/api/createEventManagerHttp",
        "function": "createEventManagerHttp"
      },      {
        "source": "/api/createEventManager",
        "function": "createEventManagerHttp"
      },
      {
        "source": "/api/batchImportUsersHttp",
        "function": "batchImportUsersHttp"
      },
      {
        "source": "/api/updateUserRoles",
        "function": "updateUserRoles"
      },
      {
        "source": "/api/createUserByEventManagerHttp",
        "function": "createUserByEventManagerHttp"
      },
      {
        "source": "/api/departmentsHttp",
        "function": "departmentsHttp"
      },
      {
        "source": "/api/deleteEventHttp",
        "function": "deleteEventHttp"
      },
      {
        "source": "/api/checkDuplicateUsers",
        "function": "checkDuplicateUsers"
      },
      {
        "source": "/api/loginWithPin",
        "function": "loginWithPin"
      },
      {
        "source": "/api/createEvent",
        "function": "createEventByPlatformAdminHttp"
      },
      {
        "source": "/api/createEventByPlatformAdminHttp",
        "function": "createEventByPlatformAdminHttp"
      },
      {
        "source": "/api/ping",
        "function": "pingHttp"
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  },
  "emulators": {
    "auth": {
      "port": 9099
    },
    "functions": {
      "port": 5001
    },
    "firestore": {
      "port": 8081
    },
    "ui": {
      "enabled": true,
      "port": 4000
    },
    "singleProjectMode": true
  }
}