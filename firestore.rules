rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // ========== 辅助函数 ==========
    function isAdmin() {
      return request.auth != null && 
             exists(/databases/$(database)/documents/admin_uids/$(request.auth.uid));
    }
    
    function isAuthenticated() {
      return request.auth != null;
    }
    

    // ========== organizations 集合（旧架构兼容） ==========
    match /organizations/{orgId} {
      allow read: if isAuthenticated();
      allow create, update, delete: if isAdmin();
      
      // ========== events 子集合 ==========
      match /events/{eventId} {
        allow read: if isAuthenticated();
        allow create, delete: if isAdmin();
        allow update: if isAdmin() || isAuthenticated();
        
        // ========== events 的 users 子集合 ==========
        match /users/{userId} {
          allow read: if isAuthenticated();
          allow create, update, delete: if isAdmin() || isAuthenticated();
        }
        
        // ========== events 的其他子集合 ==========
        match /{document=**} {
          allow read: if isAuthenticated();
          allow write: if isAuthenticated();
        }
      }
      
      // ========== organizations 的其他子集合 ==========
      match /{document=**} {
        allow read: if isAuthenticated();
        allow write: if isAdmin();
      }
    }
    
    // ========== OTP Sessions（登录验证码） ==========
    // 特殊情况：OTP 会话在登录前创建（用户未认证），所以需要允许未认证请求
    // 但应该通过 Cloud Functions sendOtpHttp 创建（使用 Admin SDK），客户端不应直接写入
    match /otp_sessions/{sessionId} {
      allow read: if true;  // 允许任何人读取 OTP 会话（进行验证）
      allow write: if false;  // 禁止直接写入 OTP 会话
      // Cloud Functions 通过 Admin SDK 创建 OTP 会话，不受此规则限制
    }
    
    // ========== GlobalUsers 集合 ==========
    match /GlobalUsers/{userId} {
      allow read: if isAuthenticated();
      allow create, update, delete: if isAuthenticated();
    }
    
    // ========== system_config 配置 ==========
    match /system_config/{docId} {
      allow read: if isAuthenticated();
      allow write: if isAdmin();
    }
    
    // ========== users 集合（通用用户） ==========
    match /users/{userId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated();
      allow update, delete: if isAuthenticated() && request.auth.uid == userId;
    }
    
    // ========== admin_uids 白名单 ==========
    match /admin_uids/{uid} {
      allow read: if isAuthenticated();
      allow write: if false;
    }
    
    // ========== 默认拒绝规则 ==========
    match /{document=**} {
      allow read, write: if false;
    }
  }
}