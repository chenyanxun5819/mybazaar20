rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // ========== 辅助函数 ==========
    function isAdmin() {
      return request.auth != null && 
             exists(/databases/$(database)/documents/admin_uids/$(request.auth.uid));
    }
    
    // ✅ 新增：检查是否为已认证用户（简化版）
    // 注意：Firestore Rules 无法有效检查 admins 数组中的电话号码匹配
    // 所以使用简化版本，依赖前端和 Cloud Functions 的访问控制
    function isEventManager() {
      return request.auth != null;
    }
    
    // ========== 组织集合 ==========
    match /organizations/{orgId} {
      allow read: if true;
      allow create, update, delete: if isAdmin();
      
      // ========== 活动子集合 ==========
      match /events/{eventId} {
        allow read: if true;
        allow create, delete: if isAdmin();
        // ✅ 修改：允许 Admin 或已认证用户（Event Manager）更新
        allow update: if isAdmin() || isEventManager();
        
        // ========== 活动用户子集合 ==========
        match /users/{userId} {
          allow read: if true;
          // ✅ 关键修改：允许 Admin 或已认证用户（Event Manager）操作用户
          // 这样 Event Manager 才能分配点数、管理用户
          allow create, update, delete: if isAdmin() || isEventManager();
        }
        
        // ========== 元数据子集合 ==========
        match /metadata/{docId} {
          allow read: if true;
          allow write: if isAdmin();
        }
      }
    }
    
    // ========== OTP Sessions（登录验证码） ==========
    match /otp_sessions/{sessionId} {
      allow read, write: if false;
    }
    
    // ========== 系统配置 ==========
    match /system_config/{docId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    // ========== 用户集合 ==========
    match /users/{userId} {
      allow read: if true;
      allow create: if request.auth != null;
      allow update, delete: if request.auth != null && request.auth.uid == userId;
    }
    
    // ========== 管理员白名单 ==========
    match /admin_uids/{uid} {
      allow read: if request.auth != null;
      allow write: if false;
    }
    
    // ========== 默认拒绝规则 ==========
    match /{document=**} {
      allow read, write: if false;
    }
  }
}