rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // 多活動架構的規則
    match /events/{eventId}/{document=**} {
      // 允許讀取活動基本資訊
      allow read: if request.auth != null;
      
      // 其他規則根據角色設定
      allow write: if request.auth != null && 
                      hasRole(eventId, 'super_admin');
    }
    
    // 輔助函數
    function hasRole(eventId, role) {
      return get(/databases/$(database)/documents/events/$(eventId)/users/$(request.auth.uid)).data.role == role;
    }
  }
}