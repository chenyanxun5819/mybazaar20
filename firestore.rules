rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // ========== 辅助函数 ==========
    function isAdmin() {
      return request.auth != null && 
             exists(/databases/$(database)/documents/admin_uids/$(request.auth.uid));
    }
    
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // ========== Event 集合（新架构 - 顶级） ==========
    match /Event/{eventId} {
      // 所有已认证用户可读
      allow read: if isAuthenticated();
      allow write: if false;
      
      // ========== users 子集合 ==========
      match /users/{userId} {
        allow read: if isAuthenticated();
        allow create, update, delete: if isAuthenticated();
        
        // users 的子集合
        match /{document=**} {
          allow read: if isAuthenticated();
          allow write: if isAuthenticated();
        }
      }
      
      // ========== sellerManagerStats 子集合 ==========
      match /sellerManagerStats/{smId} {
        allow read: if isAuthenticated();
        allow write: if false;
      }
      
      // ========== departmentStats 子集合 ==========
      match /departmentStats/{deptCode} {
        allow read: if isAuthenticated();
        allow write: if false;
      }
      
      // ========== pointAllocations 子集合 ==========
      match /pointAllocations/{allocationId} {
        allow read: if isAuthenticated();
        allow write: if isAuthenticated();
      }
      
      // ========== transactions 子集合 ==========
      match /transactions/{transactionId} {
        allow read: if isAuthenticated();
        allow write: if false;
      }
      
      // ========== 其他子集合 ==========
      match /{document=**} {
        allow read: if isAuthenticated();
        allow write: if isAuthenticated();
      }
    }
    
    // ========== organizations 集合（旧架构兼容） ==========
    match /organizations/{orgId} {
      allow read: if isAuthenticated();
      allow create, update, delete: if isAdmin();
      
      // ========== events 子集合 ==========
      match /events/{eventId} {
        allow read: if isAuthenticated();
        allow create, delete: if isAdmin();
        allow update: if isAdmin() || isAuthenticated();
        
        // ========== events 的 users 子集合 ==========
        match /users/{userId} {
          allow read: if isAuthenticated();
          allow create, update, delete: if isAdmin() || isAuthenticated();
        }
        
        // ========== events 的其他子集合 ==========
        match /{document=**} {
          allow read: if isAuthenticated();
          allow write: if isAuthenticated();
        }
      }
      
      // ========== organizations 的其他子集合 ==========
      match /{document=**} {
        allow read: if isAuthenticated();
        allow write: if isAdmin();
      }
    }
    
    // ========== OTP Sessions（登录验证码） ==========
    match /otp_sessions/{sessionId} {
      allow read, write: if isAuthenticated();
    }
    
    // ========== GlobalUsers 集合 ==========
    match /GlobalUsers/{userId} {
      allow read: if isAuthenticated();
      allow create, update, delete: if isAuthenticated();
    }
    
    // ========== system_config 配置 ==========
    match /system_config/{docId} {
      allow read: if isAuthenticated();
      allow write: if isAdmin();
    }
    
    // ========== users 集合（通用用户） ==========
    match /users/{userId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated();
      allow update, delete: if isAuthenticated() && request.auth.uid == userId;
    }
    
    // ========== admin_uids 白名单 ==========
    match /admin_uids/{uid} {
      allow read: if isAuthenticated();
      allow write: if false;
    }
    
    // ========== 默认拒绝规则 ==========
    match /{document=**} {
      allow read, write: if false;
    }
  }
}