    // cashSubmissions é›†åˆè§„åˆ™
    match /organizations/{orgId}/events/{eventId}/cashSubmissions/{submissionId} {
      
      // ===== è¾…åŠ©å‡½æ•° =====
      
      // æ£€æŸ¥ç”¨æˆ·æ˜¯å¦å·²è®¤è¯
      function isAuthenticated() {
        return request.auth != null;
      }
      
      // è·å–å½“å‰ç”¨æˆ·æ•°æ®
      function getUserData() {
        return get(/databases/$(database)/documents/organizations/$(orgId)/events/$(eventId)/users/$(request.auth.uid)).data;
      }
      
      // æ£€æŸ¥ç”¨æˆ·æ˜¯å¦æœ‰æŒ‡å®šè§’è‰²
      function hasRole(role) {
        return isAuthenticated() && 
               getUserData().roles.hasAny([role]);
      }
      
      // æ£€æŸ¥æ˜¯å¦æ˜¯æäº¤è€…æœ¬äºº
      function isSubmitter() {
        return isAuthenticated() && 
               resource.data.submittedBy == request.auth.uid;
      }
      
      // æ£€æŸ¥æ˜¯å¦æ˜¯ Finance Manager
      function isFinanceManager() {
        return hasRole('financeManager');
      }
      
      // æ£€æŸ¥æ˜¯å¦æ˜¯ Event Manager
      function isEventManager() {
        return hasRole('eventManager');
      }
      
      // æ£€æŸ¥æ˜¯å¦å¯ä»¥åˆ›å»ºä¸Šäº¤è®°å½•
      function canCreate() {
        return isAuthenticated() &&
               (hasRole('seller') || hasRole('sellerManager') || hasRole('pointSeller')) &&
               request.resource.data.submittedBy == request.auth.uid &&
               request.resource.data.status == 'pending';
      }
      
      // æ£€æŸ¥ Finance Manager æ˜¯å¦åªæ›´æ–°å…è®¸çš„å­—æ®µ
      function isValidFinanceUpdate() {
        let allowedFields = ['status', 'confirmedAt', 'receivedBy', 'receiverName', 'confirmationNote', 'metadata'].toSet();
        let modifiedFields = request.resource.data.diff(resource.data).affectedKeys();
        return modifiedFields.hasOnly(allowedFields);
      }
      
      // ===== è®¿é—®è§„åˆ™ =====
      
      // CREATE: Seller/SellerManager/PointSeller å¯ä»¥åˆ›å»ºä¸Šäº¤è®°å½•
      allow create: if canCreate();
      
      // READ: 
      // - æäº¤è€…å¯ä»¥è¯»å–è‡ªå·±çš„è®°å½•
      // - Finance Manager å¯ä»¥è¯»å–æ‰€æœ‰è®°å½•
      // - Event Manager å¯ä»¥è¯»å–æ‰€æœ‰è®°å½•
      allow read: if isSubmitter() || 
                     isFinanceManager() || 
                     isEventManager();
      
      // UPDATE: 
      // - Finance Manager å¯ä»¥æ›´æ–°çŠ¶æ€ï¼ˆç¡®è®¤/æ‹’ç»ï¼‰
      // - åªèƒ½ä¿®æ”¹ç‰¹å®šå­—æ®µ
      allow update: if isFinanceManager() && 
                       isValidFinanceUpdate();
      
      // DELETE: ä¸å…è®¸åˆ é™¤
      allow delete: if false;
    }
    
